    "version": "0.2.0",
    "configurations": [
        {
            "name": "python: repair-infer",
            "type": "debugpy",
            "request": "launch",
            "module": "src.llm.repair",
            "args": [
                "--infer-report-path",
                "output/infer-out/report.json",
                "--failed-tests",
                "output/test-results.xml",
                "--use-infer",
                "--include-infer-in-prompt"
            ],
        },
        {
            "name": "python: repair-infer-debug",
            "type": "debugpy",
            "request": "launch",
            "module": "src.llm.repair",
            "args": [
                "--infer-report-path",
                "output/infer-out/report.json",
                "--failed-tests",
                "output/test-results.xml",
                "--use-infer",
                "--include-infer-in-prompt"
            ],
            "env": {
                "USE_DEBUG_MODE": "true"
            }
        },
        {
            "name": "python: repair",
            "type": "debugpy",
            "request": "launch",
            "module": "src.llm.repair",
            "args": [
                "--failed-tests",
                "output/test-results.xml"
            ],
        }
    ]
}